function sum(arr){
    let sum = 0;
    for(let i = 0; i < arr.length; i++){
        sum += arr[i];
    } 
    return sum;
}

function sum2(arr){
    let arrCopy = arr;
    function sum2In(){
        return arrCopy.length == 0 ? 0 : arrCopy.shift() + sum2In(arrCopy)
    }
    return sum2In();
    
}
