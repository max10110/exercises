let a = [2, 8, 11, 23],
    i = 0;
function sum(arr){
    let arrCopy = arr;
    function sumIn(){
        while(arrCopy.length > 0){
            i += arr[0];
            arrCopy.shift();
            sum(arrCopy);
            return i;
        }
    } 
    return sumIn(arr);
}
console.log(sum(a));

function sum2(arr){
    return arr.length == 0 ? 0 : arr.shift() + sum2(arr);
}
console.log(sum2(a));
